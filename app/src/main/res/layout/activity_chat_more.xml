<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent" android:gravity="center">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_gravity="center"
                android:layout_margin="@dimen/pad_10dp"
                android:gravity="center"
                android:id="@+id/send_new_selfiecon_btn"
                android:background="@mipmap/ic_selfiecon"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="56dp"
                android:layout_height="56dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:id="@+id/camera_selfiecon_btn"
            android:background="@mipmap/ic_camera_selficon"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:id="@+id/add_location_btn"
            android:background="@mipmap/ic_location"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        </FrameLayout>
        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:id="@+id/search_giphy_gifs"
            android:background="@mipmap/ic_giphy"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:id="@+id/add_attachment_btn"
            android:background="@mipmap/ic_attach"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:id="@+id/close_more_actions"
            android:background="@mipmap/ic_close_actions"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        </FrameLayout>
        </LinearLayout>
</LinearLayout>