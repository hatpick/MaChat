<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_vertical">
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/receiver_profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/txt_14sp"
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/txt_12sp"
            android:id="@+id/receiver_membership_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>d
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/voip_btn"
            android:background="@mipmap/ic_voip"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true" />
        <Button
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/toggle_more_options"
            android:background="@mipmap/ic_more_options"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true" />
    </LinearLayout>
</RelativeLayout>