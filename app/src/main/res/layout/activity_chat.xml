<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/main_container"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="datapp.machat.activity.ChatActivity">
    <ListView
        android:stackFromBottom="true"
        android:background="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll"
        android:id="@+id/chatSession"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>
    <FrameLayout
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:id="@+id/loading_chat"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </FrameLayout>
    <LinearLayout
        tools:context="datapp.machat.activity.ChatActivity"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:padding="@dimen/pad_5dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:gravity="center"
                android:layout_gravity="start"
                android:enabled="false"
                android:id="@+id/send_new_selfiecon_btn"
                android:background="@mipmap/selfie_icon"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textColorHint="#88ffffff"
                android:id="@+id/new_message_content"
                android:inputType="text"
                android:textSize="@dimen/txt_16sp"
                android:paddingLeft="@dimen/pad_10dp"
                android:paddingRight="@dimen/pad_10dp"
                android:layout_marginLeft="@dimen/pad_30dp"
                android:layout_marginRight="@dimen/pad_30dp"
                android:imeActionId="100"
                android:imeOptions="actionSend"
                android:ems="10"
                android:layout_width="match_parent"
                android:hint="@string/type_msg"
                android:layout_height="30dp"/>
            <Button
                android:gravity="center"
                android:layout_gravity="end"
                android:enabled="false"
                android:id="@+id/send_new_message_btn"
                android:background="@mipmap/ic_send"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
