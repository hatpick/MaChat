<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/main_container"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="datapp.machat.activity.ChatActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/loading_chat"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:layout_gravity="center"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/swipeContainer"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/pad_5dp"
                    android:layout_height="match_parent">
                    <ListView
                        android:stackFromBottom="true"
                        android:background="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:transcriptMode="alwaysScroll"
                        android:fastScrollEnabled="true"
                        android:id="@+id/chatSession"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                    </ListView>
                </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    tools:context="datapp.machat.activity.ChatActivity"
                    android:gravity="center_vertical"
                    android:background="@drawable/chat_input_bg"
                    android:paddingLeft="@dimen/pad_5dp" android:paddingRight="@dimen/pad_5dp"
                    android:paddingTop="@dimen/pad_10dp"
                    android:orientation="horizontal"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_gravity="left"
                            android:visibility="visible"
                            android:gravity="center"
                            android:enabled="true"
                            android:id="@+id/emoji_btn"
                            android:background="@mipmap/ic_emoji"
                            android:minHeight="1dp"
                            android:minWidth="1dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <EditText
                            android:clickable="true"
                            android:textCursorDrawable="@null"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/white"
                            android:textColorHint="#88ffffff"
                            android:id="@+id/new_message_content"
                            android:inputType="textAutoComplete|textLongMessage"
                            android:textSize="@dimen/txt_16sp"
                            android:paddingLeft="@dimen/pad_5dp"
                            android:paddingRight="@dimen/pad_5dp"
                            android:imeActionId="100"
                            android:ems="10"
                            android:layout_width="match_parent"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="30dp"
                            android:hint="@string/type_msg"
                            android:layout_height="30dp"/>
                        <Button
                            android:layout_gravity="right"
                            android:visibility="visible"
                            android:gravity="center"
                            android:enabled="true"
                            android:id="@+id/buzz_btn"
                            android:background="@mipmap/ic_buzz"
                            android:minHeight="1dp"
                            android:minWidth="1dp"
                            android:layout_marginRight="35dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <FrameLayout
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:visibility="visible"
                                android:gravity="center"
                                android:enabled="true"
                                android:id="@+id/record_void_btn"
                                android:background="@mipmap/ic_recorder"
                                android:minHeight="1dp"
                                android:minWidth="1dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <Button
                                android:gravity="center"
                                android:visibility="gone"
                                android:enabled="false"
                                android:id="@+id/send_new_message_btn"
                                android:background="@mipmap/ic_send"
                                android:minHeight="1dp"
                                android:minWidth="1dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/emojis_holder"
            android:background="#80000000"
            android:layout_marginBottom="@dimen/pad_40dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <android.support.v7.widget.RecyclerView
                android:padding="1dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:id="@+id/emojis_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
