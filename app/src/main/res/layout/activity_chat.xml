<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/main_container"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="datapp.machat.activity.ChatActivity">
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeContainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/pad_5dp"
        android:layout_height="0dp">
        <ListView
            android:stackFromBottom="true"
            android:background="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"
            android:fastScrollEnabled="true"
            android:id="@+id/chatSession"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <FrameLayout
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:id="@+id/loading_chat"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </FrameLayout>
    <LinearLayout
        tools:context="datapp.machat.activity.ChatActivity"
        android:gravity="center_vertical"
        android:background="@drawable/chat_input_bg"
        android:paddingLeft="@dimen/pad_5dp" android:paddingRight="@dimen/pad_5dp"
        android:paddingTop="@dimen/pad_10dp"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:gravity="center"
                android:layout_gravity="left"
                android:id="@+id/send_new_selfiecon_btn"
                android:background="@mipmap/selfie_icon"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <Button
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:id="@+id/add_location_btn"
                android:background="@mipmap/ic_location"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:clickable="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textColorHint="#88ffffff"
                android:id="@+id/new_message_content"
                android:inputType="text"
                android:textSize="@dimen/txt_16sp"
                android:paddingLeft="@dimen/pad_10dp"
                android:paddingRight="@dimen/pad_10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:imeActionId="100"
                android:imeOptions="actionSend"
                android:ems="10"
                android:layout_width="match_parent"
                android:hint="@string/type_msg"
                android:layout_height="30dp"/>
            <Button
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/add_attachment_btn"
                android:background="@mipmap/ic_attach"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <Button
                android:gravity="center"
                android:layout_gravity="right"
                android:enabled="false"
                android:id="@+id/send_new_message_btn"
                android:background="@mipmap/ic_send"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/selfiecon_keyboard"
        android:layout_marginTop="@dimen/pad_5dp"
        android:background="@color/selficon_keyboard_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <GridView
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/selfiecon_gridview"
            android:verticalSpacing="@dimen/pad_5dp"
            android:horizontalSpacing="@dimen/pad_5dp"
            android:clipToPadding="false"
            android:stretchMode="columnWidth"
            android:scrollbarStyle="outsideOverlay"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        </GridView>
        <!--<FrameLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<Button-->
                <!--android:id="@+id/left_switch_keyboard"-->
                <!--android:layout_gravity="left"-->
                <!--android:text="ABC"-->
                <!--android:textSize="12sp"-->
                <!--android:background="@drawable/button"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="25dp" />-->
            <!--<Button-->
                <!--android:id="@+id/right_switch_keyboard"-->
                <!--android:layout_gravity="right"-->
                <!--android:text="ABC"-->
                <!--android:textSize="12sp"-->
                <!--android:background="@drawable/button"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="25dp" />-->
        <!--</FrameLayout>-->
        <LinearLayout
            android:layout_gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/create_new_selfiecon_btn"
                android:background="@drawable/new_selficon_btn_bg"
                android:text="+"
                android:textSize="@dimen/txt_20sp"
                android:fontFamily="san-serif-condensed"
                android:visibility="visible"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <Button
                android:layout_marginLeft="@dimen/pad_10dp"
                android:id="@+id/search_giphy_gifs"
                android:background="@drawable/new_selficon_btn_bg"
                android:textSize="@dimen/txt_20sp"
                android:text="+"
                android:fontFamily="san-serif-condensed"
                android:visibility="visible"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            </LinearLayout>
    </FrameLayout>
</LinearLayout>
