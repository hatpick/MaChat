<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="#ffffffff"
    android:gravity="center_horizontal" android:paddingTop="20dp"
    tools:context="datapp.machat.activity.LoginActivity">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="MaChat"
        android:textSize="40sp"
        android:textColor="#00b764"
        android:fontFamily="sans-serif"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Own your communications!"
        android:textColor="#00b764"
        android:fontFamily="sans-serif-thin"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:fontFamily="sans-serif-light"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:background="#ffe4e4e4"
        android:hint="Username"
        android:id="@+id/login_username"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp" />
    <EditText
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:background="#ffe4e4e4"
        android:hint="Password"
        android:id="@+id/login_password"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#fff"
            android:background="#00b764"
            android:text="Login"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#fff"
            android:background="#00b764"
            android:text="Register"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:textSize="20sp"
        android:text="or"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Login with Facebook"
        android:textColor="#fff"
        android:background="@drawable/fb_login"
        android:id="@+id/facebook_login"
        android:padding="10dp"
        android:drawableLeft="@drawable/com_facebook_inverse_icon"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
    </Button>

</LinearLayout>
